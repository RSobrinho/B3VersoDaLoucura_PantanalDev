{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "sourceMap": true,
    "rootDir": "./",
    "moduleResolution": "node",
    "baseUrl": "./api",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "strict": false,
    "skipLibCheck": true,
    "experimentalDecorators": true
  },
  "include": ["api/**/*.ts"]
}
